---
import type { ServiceProps } from '../interfaces/service.interface';
const { project } = Astro.props;
---

<div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto items-center">
  <!-- Project Image -->
  <div class="relative w-full h-80 rounded-md overflow-hidden">
    <a href={project.link}>
      <img
        src={project.image}
        alt={project.altText}
        class="w-full h-full object-cover rounded-lg shadow-lg transition-transform duration-300 hover:scale-105"
        loading="lazy"
      />
    </a>
  </div>

  <!-- Project Details -->
  <div class="text-left animate-fade-in">
    <h2 class="text-xl font-semibold">
      {project.title}
    </h2>
    <p class="text-gray-600 mt-2">
      {project.description}
    </p>
    <div class="mt-4 text-gray-600 text-sm">
      {project.tags.map((tag: any) => (
        <span class="mr-4"># {tag}</span>
      ))}
    </div>
    <a
      href={project.link}
      class="text-blue-600 font-semibold mt-4 inline-block"
    >
      View Service &rarr;
    </a>
  </div>
</div>
