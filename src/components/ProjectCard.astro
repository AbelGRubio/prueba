---
import type { Project } from '../interfaces/project.interface';
const { project, isMain } = Astro.props;
---

<div>
  <section class="py-16 px-6 mt-20">
    <!-- Project Image -->
    <div class="relative max-w-5xl mx-auto h-120 rounded-md">
      <img
        src={project.image}
        alt={project.altText}
        class="w-full rounded-lg shadow-lg object-cover h-full w-full"
        loading="lazy"
      />
    </div>

    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8 items-center mt-10">
      <!-- Project Details -->
      <div class="text-left">
        <h2 class="text-2xl font-semibold italic mb-2">{project.title}</h2>

        <p class={`${isMain ? 'text-white' : 'text-gray-600'} mb-4`}>
          {project.description}
        </p>

        <div class={`${isMain ? 'text-white' : 'text-gray-600'} mt-4 text-sm`}>
          {project.tags.map((tag: any) => (
            <span class="block"># {tag}</span>
          ))}
        </div>
      </div>

      <!-- Project Metadata -->
      <div class={`${isMain ? 'text-white' : 'text-gray-700'} grid grid-cols-2 gap-4 text-sm font-medium`}>
        {project.details.map((detail: any) => (
          <div>
            <h3 class="font-bold">{detail.title}</h3>
            <p>{detail.value}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {project.overview && (
    <section class="py-16 px-6 bg-white max-w-5xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8 items-start">
        <!-- Heading & Description -->
        <div>
          <h1 class="text-3xl font-bold">{project.title}</h1>
        </div>
        <div>
          <p class="text-gray-600">
            <strong>Project Overview:</strong> {project.overview}
          </p>

          <!-- Project Details -->
          <div class="mt-10 space-y-6 text-sm text-gray-700">
            {project.details.map((detail: any) => (
              <div class="border-t pt-2 flex justify-between">
                <h1 class="font-bold">{detail.title}</h1>
                <p>{detail.value}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}
</div>
