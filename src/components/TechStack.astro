---
// src/components/ToolsSection.astro
import { tools } from '../data/tools';
---

<section class="py-12 max-w-6xl mx-auto" id="tools">
  <div class="container mx-auto px-4 ">
    <div class="space-y-2">
      <h2 class="text-4xl font-bold">My Tech stack</h2>
      <p class="text-gray-500 dark:text-gray-400">My go-to stack for building things that scale.</p>
    </div>
{tools.map((section) => (
  section.data?.length > 0 && (
    <div class="pt-6">
      {/* Título de la sección */}
      <h3 class="text-lg font-semibold mb-4">{section.section}</h3>

      {/* Grid de herramientas */}
      <div class="grid grid-cols-4 sm:grid-cols-5 md:grid-cols-6 lg:grid-cols-8 gap-4">
        {section.data.map((tool) => (
          <div
            class="group relative aspect-square w-16 h-16 hover:scale-105 transition-transform duration-300"
          >
            <img
              title={tool.name}
              src={tool.image}
              alt={tool.name}
              width="50"
              height="50"
              class="absolute inset-0 w-full h-full object-cover rounded-md"
              loading="lazy"
              decoding="async"
            />

            <div class="absolute inset-0 flex items-end justify-center z-10">
              <div
                class="
                  transform scale-50 opacity-0
                  group-hover:scale-100 group-hover:opacity-100
                  bg-white dark:bg-gray-800
                  rounded-md px-2 py-1 mb-1
                  shadow-lg
                  transition-all duration-200
                  text-xs md:text-sm
                "
              >
                {tool.name}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  )
))}


