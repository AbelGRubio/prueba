---
// src/components/FeatureCard.astro
interface Props {
  index: number;
  icon: string;
  title: string;
  content: string;
}

const { index, icon, title, content } = Astro.props;
---

<div 
  class="text-center opacity-0 animate-fade-in-up"
  style={`animation-delay: ${500 + (index * 100)}ms`}
>
  <div class="text-4xl mb-4 flex justify-center text-gray-500">{icon}</div>
  <h2 class="text-3xl font-semibold">{title}</h2>
  <p class="text-sm text-gray-600 mt-2">{content}</p>
</div>
